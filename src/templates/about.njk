{# About Page Template - Extends base layout #}
{% extends "base.njk" %}

{% set activePage = 'about' %}

{% block title %}About | Bootstrap UI Exploration{% endblock %}

{% block metaDescription %}About TechSolutions - Professional Business Website{% endblock %}

{% block content %}
    <!-- Page Header -->
    <section class="page-header">
        <div class="container text-center">
            <h1>About Us</h1>
            <p class="lead">Learn more about our journey and what drives us</p>
        </div>
    </section>

    <!-- About Content Section -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center mb-5">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h2 class="section-title">Who We Are</h2>
                    <p class="section-subtitle">Leading the way in digital innovation</p>
                    <p class="text-muted">
                        We are a passionate team of developers, designers, and innovators dedicated to creating 
                        exceptional digital experiences. With years of expertise in web development and design, 
                        we transform ideas into powerful, user-friendly solutions.
                    </p>
                    <p class="text-muted">
                        Our mission is to deliver cutting-edge technology solutions that help businesses grow 
                        and succeed in the digital age. We believe in quality, innovation, and customer satisfaction 
                        above all else.
                    </p>
                </div>
                <div class="col-lg-6">
                    <img src="https://via.placeholder.com/600x400/667eea/ffffff?text=Our+Team" 
                         class="img-fluid rounded shadow" alt="About Us">
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="stats-section">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <h3><i class="bi bi-trophy-fill"></i> 500+</h3>
                        <p>Projects Completed</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <h3><i class="bi bi-people-fill"></i> 1000+</h3>
                        <p>Happy Clients</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <h3><i class="bi bi-star-fill"></i> 50+</h3>
                        <p>Team Members</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <h3><i class="bi bi-award-fill"></i> 15+</h3>
                        <p>Years Experience</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="about-section">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Our Services</h2>
                <p class="section-subtitle">Comprehensive solutions for your digital needs</p>
            </div>
            
            <div class="row g-4">
                <!-- Service Card 1 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="service-icon bg-primary-subtle">
                                <i class="bi bi-laptop"></i>
                            </div>
                            <h4 class="fw-bold mb-3">Web Development</h4>
                            <p class="text-muted">
                                Custom web applications built with modern technologies. 
                                Responsive, scalable, and optimized for performance.
                            </p>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-check-circle-fill text-success"></i> Frontend Development</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Backend Solutions</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> API Integration</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <!-- Service Card 2 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="service-icon bg-success-subtle">
                                <i class="bi bi-phone"></i>
                            </div>
                            <h4 class="fw-bold mb-3">Mobile Apps</h4>
                            <p class="text-muted">
                                Native and cross-platform mobile applications for iOS and Android. 
                                Beautiful interfaces with seamless functionality.
                            </p>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-check-circle-fill text-success"></i> iOS Development</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Android Development</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Cross-Platform Apps</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <!-- Service Card 3 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="service-icon bg-warning-subtle">
                                <i class="bi bi-palette"></i>
                            </div>
                            <h4 class="fw-bold mb-3">UI/UX Design</h4>
                            <p class="text-muted">
                                User-centered design that combines aesthetics with functionality. 
                                Creating intuitive and engaging experiences.
                            </p>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-check-circle-fill text-success"></i> User Research</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Wireframing</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Visual Design</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <!-- Service Card 4 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="service-icon bg-danger-subtle">
                                <i class="bi bi-cloud"></i>
                            </div>
                            <h4 class="fw-bold mb-3">Cloud Solutions</h4>
                            <p class="text-muted">
                                Scalable cloud infrastructure and deployment solutions. 
                                Secure, reliable, and cost-effective hosting.
                            </p>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-check-circle-fill text-success"></i> Cloud Migration</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> DevOps</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Infrastructure Setup</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <!-- Service Card 5 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="service-icon bg-info-subtle">
                                <i class="bi bi-graph-up"></i>
                            </div>
                            <h4 class="fw-bold mb-3">Digital Marketing</h4>
                            <p class="text-muted">
                                Comprehensive digital marketing strategies to grow your online presence 
                                and reach your target audience effectively.
                            </p>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-check-circle-fill text-success"></i> SEO Optimization</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Social Media</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Content Marketing</li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <!-- Service Card 6 -->
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="service-icon bg-purple-subtle">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <h4 class="fw-bold mb-3">Consulting</h4>
                            <p class="text-muted">
                                Expert technology consulting to guide your digital transformation 
                                journey and make informed decisions.
                            </p>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-check-circle-fill text-success"></i> Technology Audit</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Strategy Planning</li>
                                <li><i class="bi bi-check-circle-fill text-success"></i> Implementation Support</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="about-section bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <img src="https://via.placeholder.com/600x400/764ba2/ffffff?text=Why+Choose+Us" 
                         class="img-fluid rounded shadow" alt="Why Choose Us">
                </div>
                <div class="col-lg-6">
                    <h2 class="section-title">Why Choose Us?</h2>
                    <p class="section-subtitle">We deliver excellence in every project</p>
                    <ul class="features-list">
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <div>
                                <strong>Expert Team:</strong> Skilled professionals with years of experience
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <div>
                                <strong>Quality Assurance:</strong> Rigorous testing and quality control
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <div>
                                <strong>On-Time Delivery:</strong> We respect deadlines and deliver on schedule
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <div>
                                <strong>24/7 Support:</strong> Round-the-clock assistance for our clients
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <div>
                                <strong>Competitive Pricing:</strong> Best value for your investment
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill"></i>
                            <div>
                                <strong>Innovation Focus:</strong> Using latest technologies and methodologies
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block additionalHead %}
<style>
.about-section {
    padding: 80px 0;
}
</style>
{% endblock %}
